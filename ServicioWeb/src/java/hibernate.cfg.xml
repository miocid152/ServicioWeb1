<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/servicioweb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="org/Menu.hbm.xml"/>
    <mapping resource="org/Srmenu.hbm.xml"/>
    <mapping resource="org/Entretenimiento.hbm.xml"/>
    <mapping resource="org/Srentrenimiento.hbm.xml"/>
    <mapping resource="org/Srsalon.hbm.xml"/>
    <mapping resource="org/Empresacliente.hbm.xml"/>
    <mapping resource="org/Salon.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
